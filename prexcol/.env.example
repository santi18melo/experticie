# PREXCOL Backend - Environment Variables Template
# Copy this file to .env and fill in the actual values
# NEVER commit .env to version control!

# ============================================
# Django Settings
# ============================================
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=api.prexcol.com,www.prexcol.com,localhost,127.0.0.1

# ============================================
# Database Configuration
# ============================================
# PostgreSQL (recommended)
DATABASE_URL=postgresql://prexcol_user:your_password@localhost:5432/prexcol_db

# MySQL (alternative)
# DATABASE_URL=mysql://prexcol_user:your_password@localhost:3306/prexcol_db

# SQLite (NOT recommended for production)
# DATABASE_URL=sqlite:///db.sqlite3

# ============================================
# CORS Settings
# ============================================
CORS_ALLOWED_ORIGINS=https://prexcol.com,https://www.prexcol.com
CORS_ALLOW_CREDENTIALS=True

# ============================================
# JWT Settings
# ============================================
# Access token lifetime in minutes
JWT_ACCESS_TOKEN_LIFETIME=60
# Refresh token lifetime in days
JWT_REFRESH_TOKEN_LIFETIME=7

# ============================================
# Email Configuration (for notifications)
# ============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password-or-app-password

# ============================================
# Static & Media Files
# ============================================
STATIC_ROOT=/opt/prexcol-backend/staticfiles
MEDIA_ROOT=/opt/prexcol-backend/media
STATIC_URL=/static/
MEDIA_URL=/media/

# ============================================
# Security Settings
# ============================================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/prexcol/django.log

# ============================================
# Optional: Sentry (Error Tracking)
# ============================================
# SENTRY_DSN=https://your-sentry-dsn-here

# ============================================
# Optional: Redis (Caching)
# ============================================
# REDIS_URL=redis://localhost:6379/0

# ============================================
# Application Settings
# ============================================
SITE_NAME=PREXCOL
ADMIN_EMAIL=admin@prexcol.com
